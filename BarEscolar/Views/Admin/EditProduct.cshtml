@model BarEscolar.Models.Product

@{
    ViewData["Title"] = "Editar Produto";
    var categories = ViewBag.Categories as List<BarEscolar.Models.Category>;
}

<h2>Editar Produto</h2>

<form asp-action="EditProduct" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label>Nome</label>
        <input asp-for="Name" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>Descrição</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label>Preço (€)</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" required />
    </div>

    <div class="mb-3">
        <label>Categoria</label>
        <select asp-for="CategoryId" class="form-control">
            @foreach (var c in categories)
            {
                <option value="@c.Id" selected="@(c.Id == Model.CategoryId)">
                    @c.Name
                </option>
            }
            }
        </select>
    </div>

    <h4>Valores Nutricionais</h4>

    <div class="row">
        <div class="col-md-2 mb-3">
            <label>Kcal</label>
            <input asp-for="Kcal" class="form-control" type="number" required />
        </div>
        <div class="col-md-2 mb-3">
            <label>Proteína</label>
            <input asp-for="Protein" class="form-control" type="number" required />
        </div>
        <div class="col-md-2 mb-3">
            <label>Gordura</label>
            <input asp-for="Fat" class="form-control" type="number" required />
        </div>
        <div class="col-md-2 mb-3">
            <label>Carboidratos</label>
            <input asp-for="Carbs" class="form-control" type="number" required />
        </div>
        <div class="col-md-2 mb-3">
            <label>Sal</label>
            <input asp-for="Salt" class="form-control" type="number" required />
        </div>
    </div>

    <div class="mb-3">
        <label>Alergénios</label>
        <input asp-for="Allergens" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Stock</label>
        <input asp-for="Stock" class="form-control" type="number" />
    </div>

    <div class="mb-3">
        <label>Imagem</label>
        <input type="file" accept=".jpg, .jpeg, .png, .gif" name="imageFile" class="form-control">
    </div>

    <div class="mb-3">
        <label>Ativo?</label>
        <input asp-for="IsActive" type="checkbox" />
    </div>

    <button class="btn btn-primary">Guardar</button>
    <a asp-action="Products" class="btn btn-secondary">Cancelar</a>
</form>
<script src="/js/site.js"></script>
