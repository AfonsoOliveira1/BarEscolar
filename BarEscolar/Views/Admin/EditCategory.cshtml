@model BarEscolar.Models.Category

<h2>Editar Categoria</h2>

<form asp-action="EditCategory" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label>Imagem</label>
        <input type="file" accept=".jpg, .jpeg, .png, .gif" name="imageFile" class="form-control">
    </div>

    <div class="form-group">
        <label>Nome</label>
        <input asp-for="Name" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Guardar Alterações</button>
    <a asp-action="Categories" class="btn btn-secondary mt-2">Cancelar</a>
</form>