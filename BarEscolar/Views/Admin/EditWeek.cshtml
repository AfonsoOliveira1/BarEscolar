@model BarEscolar.Models.MenuWeek

<h1 class="page-title">Editar Semana — @Model.weekstart</h1>

<div class="dashboard-actions mb-3">
    <a asp-action="CreateDay" asp-route-weekId="@Model.id" asp-route-id="@ViewBag.User.ID" class="btn admin-btn">Criar Dia</a>
</div>

<div class="admin-table-wrapper">
    <table class="admin-table">
        <thead>
            <tr>
                <th>Data</th>
                <th>Opção</th>
                <th>Prato Principal</th>
                <th>Sopa</th>
                <th>Sobremesa</th>
                <th>Notas</th>
                <th>MaxSeats</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var day in Model.menuDays)
            {
                <tr>
                    <td>@day.Date.ToString("yyyy-MM-dd")</td>
                    <td>@(day.option == "A" ? "Não-Vegan" : "Vegan")</td>
                    <td>@day.MainDish</td>
                    <td>@day.Soup</td>
                    <td>@day.Dessert</td>
                    <td>@day.Notes</td>
                    <td>@day.MaxSeats</td>
                    <td>
                        <a asp-action="EditDay" asp-route-dayId="@day.Id" asp-route-userid="@ViewBag.User.ID" class="btn admin-btn-warning btn-sm">Editar</a>
                        <form asp-action="DeleteDay" asp-route-id="@ViewBag.User.ID" asp-route-dayId="@day.Id" method="post" style="display:inline-block">
                            <button type="submit" class="btn admin-btn-danger btn-sm"
                                    onclick="return confirm('Apagar este dia?');">
                                Apagar
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="mt-3">
    <a asp-action="MenuWeeks" asp-route-id="@ViewBag.User.ID" class="btn admin-btn-secondary">Voltar</a>
</div>
