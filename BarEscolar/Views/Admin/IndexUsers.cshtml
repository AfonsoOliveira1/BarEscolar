@model IEnumerable<BarEscolar.Models.Users>

@{
    ViewData["Title"] = "Gestão de Utilizadores";
}

<h1 class="page-title">Gestão de Utilizadores</h1>

<div class="dashboard-actions">
<form asp-action="CreateUser" method="get" style="display:inline-block;">
    <input type="hidden" name="userid" value="@ViewBag.User.ID" />
    <button type="submit" class="admin-btn">Criar Novo Utilizador</button>
</form>
</div>

<div class="admin-table-wrapper mt-3">
    <table class="admin-table">
        <thead>
            <tr>
                <th>Nome Completo</th>
                <th>Email</th>
                <th>Username</th>
                <th>Função</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>@user.UserName</td>
                    <td>@user.role</td>
                    <td>
                        <form asp-action="EditUser" asp-route-id="@user.ID" method="get" style="display:inline-block;">
                            <input type="hidden" name="userid" value="@ViewBag.User.ID" />
                            <button type="submit" class="admin-btn-warning">Editar</button>
                        </form>

                        <form asp-action="DeleteUser" asp-route-userid="@ViewBag.User.ID" asp-route-id="@user.ID" method="post" style="display:inline-block;">
                            <button type="submit" class="admin-btn-danger"
                                    onclick="return confirm('Tem a certeza que quer eliminar este utilizador?');">
                                Eliminar
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<a asp-controller="Admin" asp-route-id="@ViewBag.User.ID" asp-action="Index" class="btn btn-secondary mt-3">Voltar ao Dashboard</a>
