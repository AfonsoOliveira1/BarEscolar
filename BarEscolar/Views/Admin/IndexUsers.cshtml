@model IEnumerable<BarEscolar.Models.Users>

@{
    ViewData["Title"] = "Gestão de Utilizadores";
}

<h1>Gestão de Utilizadores</h1>

<p>
    <a asp-action="CreateUser" class="btn btn-primary">Criar Novo Utilizador</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome Completo</th>
            <th>Email</th>
            <th>Username</th>
            <th>Função</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td>@user.role</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.ID" class="btn btn-sm btn-warning">Editar</a>

                    <form asp-action="DeleteUser" asp-route-id="@user.ID" method="post" style="display:inline-block">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Tem a certeza que quer eliminar este utilizador?');">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
