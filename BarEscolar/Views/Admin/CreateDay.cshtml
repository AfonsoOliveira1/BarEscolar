@model BarEscolar.Models.MenuDay

@{
    ViewData["Title"] = "Criar Dia do Menu";
}

<h2>Criar Dia do Menu</h2>

<form asp-action="CreateDay" method="post">
    <input type="hidden" asp-for="menuweekid" />
    <input type="hidden" name="weekId" value="@Model.menuweekid"/> 

    <div class="mb-3">
        <label asp-for="Date" class="form-label"></label>
        <input asp-for="Date" class="form-control" type="date" required />
    </div>

    <div class="mb-3">
        <label asp-for="option" class="form-label">Opção</label>
        <select asp-for="option" class="form-select">
            <option value="A">A</option>
            <option value="B">B</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="MainDish" class="form-label"></label>
        <input asp-for="MainDish" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="Soup" class="form-label"></label>
        <input asp-for="Soup" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="Dessert" class="form-label"></label>
        <input asp-for="Dessert" class="form-control" required />
    </div>

    <div class="mb-3">
        <label asp-for="Notes" class="form-label"></label>
        <textarea asp-for="Notes" class="form-control" required></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="MaxSeats" class="form-label"></label>
        <input asp-for="MaxSeats" class="form-control" type="number" required />
    </div>

    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
    <a asp-action="EditWeek" asp-route-id="@Model.menuweekid" class="btn btn-secondary">Cancelar</a>
</form>
