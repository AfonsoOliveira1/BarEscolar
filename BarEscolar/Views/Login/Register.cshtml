@{
    ViewData["Title"] = "Registar";
}

<h1 class="page-title login-page-title">Registo</h1>

<div class="generic-card login-card">
    <form method="post" class="login-form">

        <div class="form-group">
            <label class="form-label">Nome completo:</label>
            <input type="text" name="fullname" class="form-input" required />
        </div>

        <div class="form-group">
            <label class="form-label">Nome de utilizador:</label>
            <input type="text" name="username" class="form-input" required />
        </div>

        <div class="form-group">
            <label class="form-label">Email:</label>
            <input type="email" name="email" class="form-input" required />
        </div>

        <div class="form-group">
            <label class="form-label">Palavra-passe:</label>
            <input type="password" name="password" class="form-input" required />
        </div>

        <button type="submit" class="btn main-btn">Registar</button>

        <a asp-action="Login" class="btn secondary-btn login-register-btn">
            Já tenho conta
        </a>
    </form>
</div>
