@model BarEscolar.Models.MenuDay
@{
    ViewData["Title"] = "Menu";
}
<h1>Menu do Dia</h1>

<p><strong>Prato Principal:</strong> @Model.MainDish</p>
<p><strong>Sopa:</strong> @Model.Soup</p>
<p><strong>Sobremesa:</strong> @Model.Dessert</p>
<p><strong>Descrição:</strong> @Model.Notes</p>

<a asp-action="MarcarConfirmed" asp-route-id="@ViewBag.User.ID" asp-route-prodId="@Model.Id">Marcar</a>


