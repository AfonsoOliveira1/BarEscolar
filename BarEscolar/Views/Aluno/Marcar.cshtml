@model BarEscolar.Models.MenuDay

@{
    ViewData["Title"] = "Marcar Menu";
}

<h1 class="marcar-title">Marcar Menu — @ViewBag.User.FullName</h1>

<div class="marcar-card">
    <div class="marcar-body">

        <!-- Dish Name -->
        <h5 class="marcar-dish">@Model.MainDish</h5>

        <!-- Information Section -->
        <div class="marcar-info">
            <p><strong>Data:</strong> @Model.Date.ToShortDateString()</p>
            <p><strong>Tipo:</strong> @(Model.option == "A" ? "Não-Vegan" : "Vegan")</p>
            <p><strong>Sopa:</strong> @Model.Soup</p>
            <p><strong>Sobremesa:</strong> @Model.Dessert</p>

            @if (!string.IsNullOrEmpty(Model.Notes))
            {
                <p><strong>Notas:</strong> @Model.Notes</p>
            }
        </div>

        <!-- Form for Confirming -->
        <form asp-action="MarcarConfirmed" method="post" class="marcar-form">
            <input type="hidden" name="id" value="@ViewBag.User.ID" />
            <input type="hidden" name="menuId" value="@Model.Id" />

            <button type="submit" class="btn marcar-btn-confirm">
                Marcar Menu
            </button>
        </form>

        <!-- Back Button -->
        <a asp-action="Index" asp-route-id="@ViewBag.User.ID" class="btn marcar-btn-back">
            Voltar
        </a>

    </div>
</div>
