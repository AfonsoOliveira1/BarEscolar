@model BarEscolar.Models.MenuDay

@{
    ViewData["Title"] = "Marcar Menu";
}

<h1>Marcar Menu — @ViewBag.User.FullName</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.MainDish</h5>
        <p class="card-text">
            <strong>Data:</strong> @Model.Date.ToShortDateString()<br />
            <strong>Tipo:</strong> @(Model.option == "A" ? "Não-Vegan" : "Vegan")<br />
            <strong>Sopa:</strong> @Model.Soup<br />
            <strong>Sobremesa:</strong> @Model.Dessert<br />
            @if (!string.IsNullOrEmpty(Model.Notes))
            {
                <strong>Notas:</strong> @Model.Notes
            }
        </p>

        <form asp-action="MarcarConfirmed" method="post">
            <input type="hidden" name="id" value="@ViewBag.User.ID" />
            <input type="hidden" name="menuId" value="@Model.Id" />
            <button type="submit" class="btn btn-success">Marcar Menu</button>
        </form>

        <a asp-action="Index" asp-route-id="@ViewBag.User.ID" class="btn btn-secondary mt-2">Voltar</a>
    </div>
</div>
