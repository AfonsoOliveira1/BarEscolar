@model BarEscolar.Models.Category

<h2 class="mb-4">Editar Categoria</h2>

<div class="card shadow-sm p-4">

    <form asp-action="EditCat" method="post" enctype="multipart/form-data">
        <input type="hidden" name="userId" value="@ViewBag.User.ID" />
        <input type="hidden" name="catid" value="@Model.Id" />

        <!-- Imagem Atual -->
        <div class="mb-3 text-center">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="/Images/@Model.ImagePath" class="img-fluid rounded mb-2" style="max-height: 140px;" />
            }
            else
            {
                <p><em>Sem Imagem Atual</em></p>
            }
        </div>

        <!-- Upload nova imagem -->
        <div class="mb-3">
            <label class="form-label">Nova Imagem (opcional)</label>
            <input type="file" accept=".jpg, .jpeg, .png, .gif" name="imageFile" class="form-control">
        </div>

        <!-- Nome -->
        <div class="mb-3">
            <label class="form-label">Nome da Categoria</label>
            <input asp-for="Name" class="form-control" required />
        </div>

        <!-- Botões -->
        <button type="submit" class="btn btn-primary">Guardar Alterações</button>
        <a asp-action="Index" asp-route-id="@ViewBag.User.ID" class="btn btn-secondary ms-2">Cancelar</a>
    </form>

</div>
