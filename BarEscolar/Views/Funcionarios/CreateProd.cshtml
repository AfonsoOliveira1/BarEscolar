@model BarEscolar.Models.Product

@{
    ViewData["Title"] = "Criar Produto";
    var categories = (List<BarEscolar.Models.Category>)ViewBag.Categories;
}

<div class="card shadow-sm p-4" style="max-width: 900px; margin:auto;">
    <h2 class="mb-4">Criar Produto</h2>

    <form asp-action="CreateProd" method="post" enctype="multipart/form-data">
        <input type="hidden" name="userId" value="@ViewBag.User.ID" />

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Nome</label>
                <input asp-for="Name" class="form-control" required />
            </div>

            <div class="col-md-6">
                <label class="form-label">Categoria</label>
                <select asp-for="CategoryId" class="form-select" required>
                    <option value="">-- Escolher --</option>
                    @foreach (var c in categories)
                    {
                        <option value="@c.Id">@c.Name</option>
                    }
                </select>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Descrição</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>

        <div class="row mb-4">
            <div class="col-md-4">
                <label class="form-label">Preço (€)</label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" required />
            </div>

            <div class="col-md-4">
                <label class="form-label">Stock</label>
                <input asp-for="Stock" class="form-control" type="number" />
            </div>

            <div class="col-md-4 d-flex align-items-end">
                <div class="form-check">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                    <label class="form-check-label">Ativo?</label>
                </div>
            </div>
        </div>

        <h4 class="mb-3">Valores Nutricionais</h4>

        <div class="row">
            <div class="col-md-2 mb-3">
                <label class="form-label">Kcal</label>
                <input asp-for="Kcal" type="number" class="form-control" />
            </div>

            <div class="col-md-2 mb-3">
                <label class="form-label">Proteína (g)</label>
                <input asp-for="Protein" type="number" class="form-control" />
            </div>

            <div class="col-md-2 mb-3">
                <label class="form-label">Gordura (g)</label>
                <input asp-for="Fat" type="number" class="form-control" />
            </div>

            <div class="col-md-2 mb-3">
                <label class="form-label">Carboidratos (g)</label>
                <input asp-for="Carbs" type="number" class="form-control" />
            </div>

            <div class="col-md-2 mb-3">
                <label class="form-label">Sal (g)</label>
                <input asp-for="Salt" type="number" class="form-control" />
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Alergénios</label>
            <input asp-for="Allergens" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Imagem</label>
            <input type="file" accept=".jpg, .jpeg, .png, .gif" name="imageFile" class="form-control">
        </div>

        <div class="mt-4 d-flex gap-2">
            <button type="submit" class="btn btn-success">Guardar</button>
            <a asp-action="Index" asp-route-id="@ViewBag.User.ID" class="btn btn-secondary">Voltar</a>
        </div>
    </form>
</div>
