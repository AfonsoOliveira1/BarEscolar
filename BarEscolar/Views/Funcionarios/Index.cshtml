@model IEnumerable<BarEscolar.Models.Product>
@{
    ViewData["Title"] = "Funcionario";
}
@if (!Model.Any())
{
    <p>Não existem Produtos no Bar da Escola.</p>
}
else
{
    <h1>Bem-vindo, @ViewBag.User.FullName!</h1>
    <h2>Produtos do Bar</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Imagem</th>
                <th>Nome</th>
                <th>Preço</th>
                <th>Stock</th>
                <th>Descrição</th>
                <th>Categoria</th>
                <th>Detalhes</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prod in Model)
            {
                <tr>
                    <td>@prod.Imagepath</td>
                    <td>@prod.Name</td>
                    <td>@prod.Price</td>
                    <td>@prod.Stock</td>
                    <td>@prod.Description</td>
                    <td>
                        @{
                            List<Category> categorys = ViewBag.Categorys;
                            var category = categorys?.FirstOrDefault(c => c.Id == prod.CategoryId);
                            @category?.Name
                            ;
                        }
                    </td>
                    <td>
                        <a asp-action="DetailsProd" asp-route-id="@ViewBag.User.ID" asp-route-prodid="@prod.Id">Detalhes</a> |
                        <a asp-action="EditProd" asp-route-id="@ViewBag.User.ID" asp-route-prodid="@prod.Id">Editar</a> |
                        <a asp-action="DeleteProd" asp-route-id="@ViewBag.User.ID" asp-route-prodid="@prod.Id">Apagar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <h2>Pedidos</h2>
}