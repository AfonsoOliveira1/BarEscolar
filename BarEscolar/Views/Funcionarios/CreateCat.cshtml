@model BarEscolar.Models.Category

<div class="card shadow-sm p-4" style="max-width: 500px; margin:auto;">
    <h2 class="mb-4 text-center">Nova Categoria</h2>

    <form asp-action="CreateCat" method="post" enctype="multipart/form-data">
        <input type="hidden" name="userId" value="@ViewBag.User.ID" />

        <div class="mb-3">
            <label class="form-label">Imagem</label>
            <input type="file" accept=".jpg, .jpeg, .png, .gif" name="imageFile" class="form-control">
        </div>

        <div class="mb-3">
            <label class="form-label">Nome</label>
            <input asp-for="Name" class="form-control" required />
        </div>

        <div class="mt-3 d-flex gap-2">
            <button type="submit" class="btn btn-success">Guardar</button>
            <a asp-action="Index" asp-route-id="@ViewBag.User.ID" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
